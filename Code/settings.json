{
  // ──────────────────────────────
  // Window Settings
  // ──────────────────────────────
  "window.restoreWindows": "none",
  "window.commandCenter": true,
  "window.titleBarStyle": "custom",
  "window.newWindowDimensions": "inherit",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "symbols",
  "workbench.startupEditor": "none",
  "workbench.editor.tabActionLocation": "left",
  "workbench.colorTheme": "Rouge 2",
  "workbench.commandPalette.experimental.suggestCommands": true,
  "workbench.list.smoothScrolling": true,

  // ──────────────────────────────
  // Editor (Global) Settings
  // ──────────────────────────────
  "editor.guides.bracketPairs": "active",
  "editor.formatOnSave": true,
  "editor.foldingImportsByDefault": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.stickyScroll.enabled": true,
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.inlineSuggest.enabled": true,
  "editor.formatOnPaste": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.experimentalGpuAcceleration": "on",
  "editor.linkedEditing": true,
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.formatOnType": true,
  "editor.wordWrap": "off",
  "editor.scrollBeyondLastColumn": 5,
  "editor.scrollbar.horizontal": "auto",

  // ──────────────────────────────
  // Explorer Settings
  // ──────────────────────────────
  "explorer.incrementalNaming": "smart",
  "explorer.confirmDragAndDrop": false,
  "explorer.excludeGitIgnore": true,

  // ──────────────────────────────
  // File Settings
  // ──────────────────────────────
  "files.autoSave": "afterDelay",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.simpleDialog.enable": true,

  // ──────────────────────────────
  // Search Settings
  // ──────────────────────────────
  "search.showLineNumbers": true,

  // ──────────────────────────────
  // Project & Git Base Folders
  // ──────────────────────────────
  "projectManager.git.baseFolders": [
    "/Users/cyan/Library/Mobile Documents/com~apple~CloudDocs/Projects"
  ],

  // ──────────────────────────────
  // Git & SCM Settings
  // ──────────────────────────────
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "always",
  "git.autofetch": true,
  "git.ignoreRebaseWarning": true,
  "scm.diffDecorationsGutterPattern": {
    "added": true
  },
  "scm.diffDecorationsIgnoreTrimWhitespace": "inherit",

  // ──────────────────────────────
  // Terminal Settings
  // ──────────────────────────────
  "terminal.integrated.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "line",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "/opt/homebrew/bin/zsh",
      "args": ["--no-rcs"]
    }
  },
  "terminal.integrated.enableImages": true,

  // ──────────────────────────────
  // Shell / PowerShell Settings
  // ──────────────────────────────
  "powershell.promptToUpdatePowerShell": false,
  "python.languageServer": "Pylance",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.terminal.focusAfterLaunch": true,
  "python.terminal.shellIntegration.enabled": true,
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,

  // ──────────────────────────────
  // Prettier Settings
  // ──────────────────────────────
  "prettier.resolveGlobalModules": true,

  // ──────────────────────────────
  // LLDB Settings
  // ──────────────────────────────
  "lldb.suppressUpdateNotifications": true,
  "lldb.library": "/Applications/Xcode.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",
  "lldb.launch.expressions": "native",

  // ──────────────────────────────
  // GitHub & Copilot Settings
  // ──────────────────────────────
  "githubPullRequests.createOnPublishBranch": "never",
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.newWorkspaceCreation.enabled": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.search.semanticTextResults": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.chat.scopeSelection": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "githubPullRequests.experimental.chat": true,
  "githubPullRequests.experimental.notificationsView": true,
  "githubPullRequests.experimental.useQuickChat": true,

  // ──────────────────────────────
  // Chat Settings
  // ──────────────────────────────
  "chat.renderRelatedFiles": true,
  "chat.agent.enabled": true,

  // ──────────────────────────────
  // Remote Settings
  // ──────────────────────────────
  "remote.defaultExtensionsIfInstalledLocally": [
    "GitHub.copilot",
    "GitHub.copilot-chat",
    "GitHub.vscode-pull-request-github"
  ],

  // ──────────────────────────────
  // Security Settings
  // ──────────────────────────────
  "security.workspace.trust.untrustedFiles": "open",

  // ──────────────────────────────
  // Application Settings
  // ──────────────────────────────
  "application.shellEnvironmentResolutionTimeout": 30,

  // ──────────────────────────────
  // VS Icons
  // ──────────────────────────────
  "vsicons.dontShowNewVersionMessage": true,

  // ──────────────────────────────
  // Language-Specific Editor Overrides
  // ──────────────────────────────
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell"
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  }

  // ──────────────────────────────
  // Miscellaneous Settings
  // ──────────────────────────────
}
